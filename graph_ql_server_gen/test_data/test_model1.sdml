config db {
    provider = "foundationDB"
}

model User {
    email       ShortStr      @unique
    name        ShortStr?     
    nickNames   ShortStr[]
    role        Role          @default(USER)
    profile     Profile?
    posts       Post[]
}

model Profile {
    bio        LongStr?
    user       User
}

model Post {
    createdAt   DateTime    @default(now())
    updatedAt   DateTime
    title       ShortStr
    published   Bool     @default(False)
    author      User
    category    Category[]
}

model Category {
    name        ShortStr    @unique
    posts       Post[]
}

enum Role {
    USER
    ADMIN
}

enum Bool {
    True
    False
}